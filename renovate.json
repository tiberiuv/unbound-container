{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "matchDatasources": [
        "github-releases"
      ],
      "matchPackageNames": [
        "NLnetLabs/unbound"
      ],
      "versioning": "^Unbound (?<version>.*)$"
    }
  ]
}
